<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    app:cardCornerRadius="3dp"
    android:layout_margin="5dp"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="CODIGO"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="DESCRICAO"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtCodigo"
            app:layout_constraintTop_toTopOf="@+id/txtCodigo" />

        <TextView
            android:id="@+id/txtEstoque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Estoque:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtCodigo"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo" />

        <TextView
            android:id="@+id/txtQtdeEstoque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/txtEstoque"
            app:layout_constraintTop_toTopOf="@+id/txtEstoque" />

        <TextView
            android:id="@+id/txtVrMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Vr. Máx:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtEstoque"
            app:layout_constraintTop_toBottomOf="@+id/txtEstoque" />

        <TextView
            android:id="@+id/txtSetVrMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="0.00"
            app:layout_constraintStart_toEndOf="@+id/txtVrMax"
            app:layout_constraintTop_toTopOf="@+id/txtVrMax" />

        <TextView
            android:id="@+id/txtVrMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Vr. Mín:"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtSetVrMax"
            app:layout_constraintTop_toTopOf="@+id/txtSetVrMax" />

        <TextView
            android:id="@+id/txtSetVrMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="0.00"
            app:layout_constraintStart_toEndOf="@+id/txtVrMin"
            app:layout_constraintTop_toTopOf="@+id/txtVrMin" />

        <TextView
            android:id="@+id/txtLegenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Legenda:"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtQtdeEstoque"
            app:layout_constraintTop_toTopOf="@+id/txtQtdeEstoque" />

        <TextView
            android:id="@+id/txtDescLegenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="NORMAL"
            app:layout_constraintStart_toEndOf="@+id/txtLegenda"
            app:layout_constraintTop_toTopOf="@+id/txtLegenda" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>